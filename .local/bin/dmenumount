#!/bin/sh

# Gives a dmenu prompt to mount unmounted drives and Android phones. If
# they're in /etc/fstab, they'll be mounted automatically. Otherwise, you'll
# be prompted to give a mountpoint from already existsing directories. If you
# input a novel directory, it will prompt you to create that directory.

getmount() { \
	[ -z "$chosen" ] && exit 1
        # shellcheck disable=SC2086
	mp="$(find $1 2>/dev/null | dmenu -i -p "Indiquatz le ponh de montatge.")" || exit 1
	test -z "$mp" && exit 1
	if [ ! -d "$mp" ]; then
		mkdiryn=$(printf "Non\\nÃ’c" | dmenu -i -p "$mp exista pas. z-O crear?") || exit 1
		[ "$mkdiryn" = "Ã’c" ] && (mkdir -p "$mp" || sudo -A mkdir -p "$mp")
	fi
	}

mountusb() { \
	chosen="$(echo "$usbdrives" | dmenu -i -p "Quun disc montar ?")" || exit 1
	chosen="$(echo "$chosen" | awk '{print $1}')"
	sudo -A mount "$chosen" 2>/dev/null && notify-send "ðŸ’» Montatge USB" "$chosen montat." && exit 0
	alreadymounted=$(lsblk -nrpo "name,type,mountpoint" | awk '$3!~/\/boot|\/home$|SWAP/&&length($3)>1{printf "-not ( -path *%s -prune ) ",$3}')
	getmount "/mnt /media /mount /home -maxdepth 5 -type d $alreadymounted"
	partitiontype="$(lsblk -no "fstype" "$chosen")"
	case "$partitiontype" in
		"vfat") sudo -A mount -t vfat "$chosen" "$mp" -o rw,umask=0000;;
		"exfat") sudo -A mount "$chosen" "$mp" -o uid="$(id -u)",gid="$(id -g)";;
		*) sudo -A mount "$chosen" "$mp"; user="$(whoami)"; ug="$(groups | awk '{print $1}')"; sudo -A chown "$user":"$ug" "$mp";;
	esac && notify-send "ðŸ’» Montatge USB" "$chosen z-es montat vÃ¨s $mp." ||
		notify-send "ðŸ’» Le disc a pas capitat de montar." "Probablament un problÃ¨ma de permessions o le disc z-es desjÃ  montat."
	}

mountandroid() { \
	chosen="$(echo "$anddrives" | dmenu -i -p "Quun aparelh Android ?")" || exit 1
	chosen="$(echo "$chosen" | cut -d : -f 1)"
	getmount "$HOME -maxdepth 3 -type d"
	echo "OK" | dmenu -i -p "Pressatz Autorizar sobre vÃ²stre aparelh e de suita pressatz entrada" || exit 1
	simple-mtpfs --device "$chosen" "$mp" &&
		notify-send "ðŸ¤– Android en montatge" "L'aparelh Android z-es montat vÃ¨s $mp." ||
		notify-send "ðŸ¤– Android a pas capitat de montar." "Probablament un problÃ¨ma de permessions o l'aparelh z-es desjÃ  montat."
	}

asktype() { \
	choice="$(printf "USB\\nAndroid" | dmenu -i -p "Montar un disc USB o un aparelh Android ?")" || exit 1
	case $choice in
		USB) mountusb ;;
		Android) mountandroid ;;
	esac
	}

anddrives=$(simple-mtpfs -l 2>/dev/null)
usbdrives="$(lsblk -rpo "name,type,size,label,mountpoint,fstype" | grep -v crypto_LUKS | grep 'part\|rom' | sed 's/ /:/g' | awk -F':' '$5==""{printf "%s (%s) %s\n",$1,$3,$4}')"

if [ -z "$usbdrives" ]; then
	[ -z "$anddrives" ] && echo "Pas de disc USB o d'aparelh Android detectat" && exit
	echo "Aparelh(s) Android detectats."
	mountandroid
else
	if [ -z "$anddrives" ]; then
		echo "Disc(s) USB detectats."
		mountusb
	else
		echo "Disc(s) USB o aparelh(s) Android detectat(s)."
		asktype
	fi
fi
