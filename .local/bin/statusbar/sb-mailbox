#!/bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e neomutt ;;
	2) setsid -f mw -Y >/dev/null ;;
	3) notify-send "ğŸ“¬ Module mÃ¨l" "\- Mostra los mÃ¨ls pas legits
- Mostra ğŸ”ƒ si le mÃ¨l se sincroniza
- Le clic a l'esquÃ¨rra dobra neomutt
- Le clic au mejan sincroniza los mÃ¨ls" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"

pidof mbsync >/dev/null 2>&1 && icon="ğŸ”ƒ"

[ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ğŸ“¬$unread$icon"
