#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) notify-send "ğŸ’½ Espaci disc" "$(df -h --output=target,used,size)" ;;
	3) notify-send "ğŸ’½ Module de disc" "\- Mostra l'espaci disc utilizat.
- Clicatz per mostrar totas las informacions de disc." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$location" in
	"/home"* ) icon="ğŸ " ;;
	"/mnt"* ) icon="ğŸ’¾" ;;
	*) icon="ğŸ–¥";;
esac

printf "%s: %s\n" "$icon" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"
