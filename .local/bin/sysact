#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ verrolhar\nğŸšª partir $WM\nâ™»ï¸ tornar $WM\nğŸ» ivÃ¨rnar\nğŸ”ƒ reaviar\nğŸ–¥ï¸ atudar\nğŸ’¤ metra en velha\nğŸ“º ecran barrat" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ verrolhar') slock ;;
	"ğŸšª partir $WM") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ tornar $WM") kill -HUP "$(wmpid)" ;;
	'ğŸ» ivÃ¨rnar') slock $ctl hibernate -i ;;
	'ğŸ’¤ metra en velha') slock $ctl suspend -i ;;
	'ğŸ”ƒ reaviar') $ctl reboot -i ;;
	'ğŸ–¥ï¸ atudar') $ctl poweroff -i ;;
	'ğŸ“º ecran barrat') xset dpms force off ;;
	*) exit 1 ;;
esac
